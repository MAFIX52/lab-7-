#include <iostream>
using namespace std;
int main()
{
    setlocale(0, "");
    int n1;
    cout << "ведите число: ";
    cin >> n1;
    int sum = 0;
	int umnoze = 0;

    for (int i = 1; i <= n1; i++) 
    {

        umnoze += n1;

    }
    cout << "произведение - " << umnoze << endl;
    for (int i = 0; i <= n1; i++) 
    {

        sum = i + n1;


    }
	cout << "сумма - " << sum;
	return 0;
}
